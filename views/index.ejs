<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.css">
  <link rel="stylesheet" href="styles/main.css">
  <title>TODO App</title>
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-custom navbar-mainbg ">
  
      <div class="collapse navbar-collapse " id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
  
          <li class="nav-item">
            <a class="nav-link" href="/"><i class="far fa-calendar-alt"></i>Today</a>
          </li>
           
  
  
        </ul>
      </div>
    </nav>
  </header>

  <main>  <div class="box" id="heading">
    <h1>
       <%= listTitle %>
    </h1>
  </div>
  <div class="box">


  
  
  <ul>
    
        <% newListItems.forEach(function(todo) { %>
          <form action="/delete" method="post">

          <div class="item">
            <input type="checkbox" name="checkbox" value="<%= todo._id %>" onchange="this.form.submit()">
            <p>
          <%= todo.task %>
            </p>
          </div>


          </form>

        <% }); %>
      
  </ul>


  <form action="/" method="post">
    <input type="text" name="task" placeholder="Enter a task">
    <button type="submit">+</button>
  </form>

  </div>
  </main>
  <footer>Copyright Â© Som Nath Tripathi
  </footer>
  
</body>
</html>
